{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES5", "ES6", "ES2015", "ES2017", "ES2021", "DOM"],
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/.json"],
  "exclude": ["node_modules"]
}
